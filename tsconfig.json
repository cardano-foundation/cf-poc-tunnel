{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "es2020"
    ],
    "module": "commonjs",
    "baseUrl": ".",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "include": ["**/*.ts", "**/*.tsx", "src"],
    "exclude": ["node_modules"]
  }
}
